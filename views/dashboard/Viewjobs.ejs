<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View jobs</title>
</head>

<body>
    <%- include("./header.ejs")%>
    <h1>View jobs</h1>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <%- include("./left.ejs") %>
                </div>




                <div class="col-lg-12  col-md-12 col-sm-12 bg-secondary mt-5">
                    <% if(data.length>0){%>                    
                        <table class="table">
                        <thead>
                           
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">Job Location</th>
                                <th scope="col">Job Post</th>
                                <th scope="col">Job Details</th>
                                <th scope="col">Qulification</th>
                                <th scope="col">File</th>
                                <th scope="col">Description</th>
                                <th scope="col">Action</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                     <% for (var i=0; i<data.length; i++){%>
                            <tr>
                                <!-- <th scope="row">1</th> -->
                                <td><%=  i %></td>
                                <td><%= data [i].location%></td>
                                <td><%= data [i].post%></td>
                                <td><%= data [i].details%></td>
                                <td><%= data [i].quelification%></td>
                                <td><%= data [i].file%></td>
                                <td><%= data [i].description%></td>
                                
                                <td>
                                    <button class="btn btn-outline-success">
                                        <a class="text-dark" href="/edit_4/<%= data[i]._id %>">EDIT</a>
                                    </button>

                                    <button class="btn btn-success">
                                        <a class="text-dark" href="/delete_viewjob/<%= data[i]._id %>">DELETE</a>
                                    </button>
                                </td>
                            </tr>
                            <%}%>
                        </tbody>
                    </table>
                    <%}else {%>
                        no Record found
                         <%}%>
            </div>
        </div>
       

</body>

</html>
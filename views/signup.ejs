<body>
    <%- include("./common/header.ejs") %>
    <div class="container bg-dark text-white"style="height:500px;">
        <div class="col-lg-6 col-md-6 col-sm-6">
           
    
                <!-- normal form start -->
    
                <div class="container py-3">
                    <h2>Sign-up</h2>
                    <form method="post" action="/signup">
    
    
    
                        <label for="Name">Name:</label>
                        <input  type="text" class="form-control mb-4" id="name" placeholder="Enter Your User Name"
                            name="uname">
    
    
    
                        <label for="email">Email:</label>
                        <input autocomplete="on" type="email" class="form-control mb-4" id="email" placeholder="Enter email"
                            name="email">
    
    
    
    
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control mb-4" id="pwd" placeholder="Enter password" name="pass">
    
    
    
    
                        <label for="email">Phone no:</label>
                        <input  type="text" class="form-control mb-4" id="number"
                            placeholder="Enter The Phone Number" name="pnumber">


                            <label for="Select">
                                Pincode <input type="number" name="pincode" placeholder="Enter your PinCode">
                            </label><br>    
                </div>
    
    
    
        </div>
    
    
       
       
        <button type="submit" class="btn btn-primary">Sign-up</button>
        </form>
    </div>
    
    </form>
    
    </div>
    </div>
    <%- include("./common/footer.ejs") %>
      


</body>
</html>